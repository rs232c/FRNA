# ============================================
# Fall River News Aggregator - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control (it is in .gitignore)

# ============================================
# Admin Panel Credentials (REQUIRED)
# ============================================
# These are required for admin panel access
# Set secure passwords - do not use defaults in production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
ZIP_LOGIN_PASSWORD=your_zip_password_here

# Flask Security
# Generate a secure random key: python -c import secrets; print(secrets.token_hex(32))
FLASK_SECRET_KEY=
# Set to true in production with HTTPS
SESSION_COOKIE_SECURE=false
# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ============================================
# Facebook API Configuration
# ============================================
# Get these from https://developers.facebook.com/
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_PAGE_ID=
FACEBOOK_PAGE_ACCESS_TOKEN=
FACEBOOK_CITY_PAGE_ID=
FACEBOOK_CITY_PAGE_TOKEN=
COLUMNIST_1_FB_ID=
COLUMNIST_2_FB_ID=

# ============================================
# Instagram Configuration
# ============================================
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=

# ============================================
# TikTok Configuration
# ============================================
# Note: TikTok API requires business account
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_ACCESS_TOKEN=

# ============================================
# Weather API Configuration
# ============================================
# Get free API key at: https://openweathermap.org/api
# Free tier: 1000 calls/day, 60 calls/minute
OPENWEATHERMAP_API_KEY=

# ============================================
# Website Configuration
# ============================================
WEBSITE_DOMAIN=fallrivernews.local
AUTO_DEPLOY=false
DEPLOY_METHOD=github_pages
